{
  "name": "ptxaligner",
  "version": "1.3.0",
  "description": "a command line tool to pre-align PTX files with a greek usfm and another usfm from the desired language, into one pre-aligned usfm.",
  "source": "src/index.js",
  "main": "dist/main.js",
  "scripts": {
    "testfr": "npx ptxaligner ./tests/test_titus_french.json",
    "testes": "npx ptxaligner ./tests/test_titus_spanish.json",
    "align": "npx ptxaligner",
    "watch": "parcel watch",
    "build": "rm -fr dist && parcel build --no-source-maps"
  },
  "bin": {
    "ptxaligner": "./bin/global.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielC-N/ptxaligner.git"
  },
  "preferGlobal": true,
  "keywords": [
    "ptx",
    "align",
    "usfm",
    "perf"
  ],
  "author": "Nicolas Condomitti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DanielC-N/ptxaligner/issues"
  },
  "homepage": "https://github.com/DanielC-N/ptxaligner#readme",
  "devDependencies": {
    "parcel": "^2.7.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.3",
    "axios": "^0.27.2",
    "commander": "^9.4.0",
    "epitelete": "^0.2.6",
    "fs-extra": "^10.1.0",
    "path": "^0.12.7",
    "pipeline-handler": "^1.1.0",
    "proskomma": "^0.7.15",
    "proskomma-json-tools": "^0.5.6",
    "proskomma-utils": "^0.8.2",
    "uw-proskomma": "^0.8.5"
  }
}
